function enviarform(idpersons)
{   
	var array_idpersons1=idpersons.split("="); 
	var array_idpersons2=array_idpersons1[1].split("&");
	document.getElementById("idpt").value=array_idpersons2[0];
	document.getElementById("idp").value=array_idpersons1[2];
	//var m_url='hotelguadalmina/search.asp?p=0&idEstablishmentSRT=2&idLanguage=es-ES&idpt=' + array_idpersons2[0] + '&idp=' + array_idpersons1[2] + '&start=' + inicio + '&end=' + fin;
	//document.getElementById("formu").action='https://www.centrotel.es/'+m_url;
	document.getElementById("formu").submit();
}
